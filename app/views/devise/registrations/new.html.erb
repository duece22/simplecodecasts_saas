<div class="row">
  <div class="col-md-6 col-md-offset-3 text-center">
    <% if params[:plan] == '2' %>
      <h1>Pro Account</h1>
      <p>Sign up for the pro account for only $10/month and get the ability to contact the members of our community and make meaningful connections.</p>
    <% else %>
      <h2>Basic Account</h2>
      <p>Sign up for free and get basic access to our community.</p>
    <% end %>
    </div>
  <div class="col-md-6 col-md-offset-3">
    <div class="well">
      <h2 class="center">Sign Up</h2>
        <% if params[:plan] == '2' %>
          <%= render "pro_form" %>
        <% else %>
          <%= render "basic_form" %>
        <% end %>
        
        <%= render "devise/shared/links" %>
    </div>
  </div>
</div>